        //                     echo "Cleaning up lint-output.log..."
        //                     // (ì¶”ê°€ ê°œì„ ) -f ì˜µì…˜ìœ¼ë¡œ íŒŒì¼ì´ ì—†ì–´ë„ ì—ëŸ¬ë¥¼ ë‚´ì§€ ì•Šë„ë¡ í•©ë‹ˆë‹¤.
        //                     sh "rm -f lint-output.log"
        //                 }   
                        
        //             }
        //         }
        //     }
        // }

        // build image
        stage('Build Image') {
            steps {
                echo "5. Build New Docker Image"
                script {
                    try {
                        def imageTag = "${IMAGE_NAME}:${env.BUILD_NUMBER}" 
                        sh "docker build -t ${imageTag} ./app" 
                    } catch (Exception e) {
                        failureStage = "Build Stage"
                        throw e
                    }
                }
            }
        }

        // push image
        stage('Push to GHCR') {
            steps {
                echo "6. Push the Docker Image to GHCR"
                script {
                    try {
                        def imageTag = "${IMAGE_NAME}:${env.BUILD_NUMBER}"
                        withCredentials([usernamePassword(credentialsId: GHCR_CREDS_ID, usernameVariable: 'USER', passwordVariable: 'TOKEN')]) {
                            sh "echo ${TOKEN} | docker login ghcr.io -u ${USER} --password-stdin"
                            sh "docker push ${imageTag}"
                        }
                    } catch (Exception e) {
                        failureStage = "Push to GHCR Stage"
                        throw e
                    }
                }
            }
        }

        // deploy to server
        stage('Deploy to Server') {
            steps {
                echo "7. Deploy the new image to the ${TARGET_DEPLOY_SERVER} server"
                script {
                    try {
                        // ì–´ë–¤ ì»¨í…Œì´ë„ˆë¥¼ ì—…ë°ì´íŠ¸ ë° ì—…ìŠ¤íŠ¸ë¦¼ ëŒ€ìƒì„ ì§€ì •
                        def deployService = (env.BUILD_NUMBER.toInteger() % 2 == 0) ? "nestjs-green" : "nestjs-blue" 
                        def upstreamService = (deployService == "nestjs-green") ? "nestjs-blue" : "nestjs-green"

                        def imageTag = "${IMAGE_NAME}:${env.BUILD_NUMBER}"
                        def newTag = "${env.BUILD_NUMBER}"
                        def tagEnvVar = (deployService == "nestjs-green") ? "TAG_GREEN" : "TAG_BLUE"
                        withCredentials([usernamePassword(credentialsId: GHCR_CREDS_ID, usernameVariable: 'GHCR_USER', passwordVariable: 'GHCR_TOKEN'), string(credentialsId: 'prod-database-url', variable: 'PROD_DB_URL')]) {
                            sshagent(credentials: [TARGET_SSH_CREDS_ID]) {
                                sh """ 
                                    ssh -o StrictHostKeyChecking=no -p ${TARGET_PORT} ${TARGET_HOST} '
                                    set -ex

                                    echo "--- Logging in to GHCR on target server ---"
                                    echo "${GHCR_TOKEN}" | docker login ghcr.io -u ${GHCR_USER} --password-stdin

                                    echo "--- (1/4) Pull the new image : ${imageTag} ---"
                                    docker pull ${imageTag}

                                    echo "--- (2/4) Replace ${deployService} Server to new  ---"
                                    cd ${TARGET_PROJECT_PATH}
                                    
                                    echo "--- Refresh main repository ---"
                                    git pull origin main
                                    git checkout main

                                    echo "--- Exporting new tag for compose: ${tagEnvVar}=${newTag} ---"
                                    export ${tagEnvVar}="${newTag}"

                                    echo "--- Exporting URL ---"
                                    export DATABASE_URL="${PROD_DB_URL}"
                                    
                                    docker compose --env-file init.env up -d --no-deps --force-recreate ${deployService}

                                    echo "--- (3/4) Switch Nginx Configuration to change traffic ---"
                                    cd ${TARGET_INFRA_PATH}
                                    sed -i "s|server main-nestjs-.*:3000;|server main-${deployService}:3000;|" ./nginx/nginx_upstream_nestjs.conf   

                                    echo "--- (4/4) Reload Nginx Configuration ---"
                                    docker exec main-protostar-nginx nginx -s reload

                                    echo "--- Logging out from GHCR on target server ---"
                                    docker logout ghcr.io
                                    
                                    echo "--- All Deploy Proccess is done ---"
                                    '
                                """
                            }
                        }
                    } catch (Exception e) {
                        failureStage = "Deploy Stage"
                        throw e
                    }
                }
            }
        }
    }
   
    post {
        success {
            echo "Deployment succeeded. Now send a discord notification."
            script {
                withCredentials([string(credentialsId: DISCORD_CREDS_ID, variable: 'DISCORD_URL')]) {
                    def message = "{\"content\": \"ğŸš€ Build Process is successfully finished : **[${env.JOB_NAME}]** - **#${env.BUILD_NUMBER}**\"}"

                    sh "curl -X POST -H 'Content-Type: application/json' --data '${message}' ${DISCORD_URL}"
                }

            }

        }
        failure {
            echo "Deployment failed! Now send a discord notification."

            script {
                withCredentials([string(credentialsId: DISCORD_CREDS_ID, variable: 'DISCORD_URL')]) {
                    def message = "{\"content\": \"ğŸ”¥ Build Process is failed at ${failureStage}. Check Build logs ${env.BUILD_URL} : **[${env.JOB_NAME}]** - **#${env.BUILD_NUMBER}**\"}"

                    sh "curl -X POST -H 'Content-Type: application/json' --data '${message}' ${DISCORD_URL}"
                }    
            }
            
        }
        always {
            echo "Logout from GHCR"
            sh "docker logout ghcr.io"
        }
    }
}